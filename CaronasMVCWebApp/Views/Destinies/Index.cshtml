@model IEnumerable<CaronasMVCWebApp.Models.Destinies>

@{
    ViewData["Title"] = "Destinos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustoPorPassageiro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustoPorPassageiro)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info glyphicon glyphicon-search"></a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default glyphicon glyphicon-pencil"></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger glyphicon glyphicon-trash"></a>
            </td>
        </tr>
}
    </tbody>
</table>
