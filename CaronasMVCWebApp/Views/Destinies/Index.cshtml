@model IEnumerable<CaronasMVCWebApp.Models.Destiny>

@{
    ViewData["Title"] = "Destinos";
}

@if (TempData["SuccessMessage"] != null)
{

    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{

    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Cadastrar Novo Destino">
        <i class="fa fa-plus-circle">
        </i>
        <strong>  Novo</strong>
    </a>
</p>

@foreach (var item in Model)
{

    <div class="panel-group">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#@item.Id">@item.Name</a>
                </h4>
            </div>
            <div id="@item.Id" class="panel-collapse collapse">
                <ul class="list-group">
                    <li class="list-group-item"><b>@Html.DisplayNameFor(Model => Model.Name): </b>@Html.DisplayFor(modelItem => item.Name)</li>
                    <li class="list-group-item"><b>@Html.DisplayNameFor(Model => Model.CostPerPassenger): </b>@Html.DisplayFor(modelItem => item.CostPerPassenger)</li>
                </ul>
                <div class="panel-footer">

                    <div class="btn-group btn-sm">

                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info  fa fa-search" data-toggle="tooltip" data-placement="bottom" title="Detalhes"></a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default fa fa-pencil-alt" data-toggle="tooltip" data-placement="bottom" title="Alterar"></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger  fa fa-trash" data-toggle="tooltip" data-placement="bottom" title="Deletar"></a>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
