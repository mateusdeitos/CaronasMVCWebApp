@using System.Globalization
@using CaronasMVCWebApp.Models.Enums
@model List<CaronasMVCWebApp.Models.ViewModels.MonthlyReportViewModel>

@{
    ViewData["Title"] = "Relatório sintético";

    var culture = new System.Globalization.CultureInfo("pt-BR");
    TextInfo mes = new CultureInfo("pt-BR", false).TextInfo;

}

@if (TempData["SuccessMessage"] != null)
{

    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{

    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
<h2>@ViewData["Title"]</h2>
<br />



@foreach (var item in Model)
{

    <div class="panel">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <p>
                        @item.Period.ToString("yyyy") - @mes.ToTitleCase(culture.DateTimeFormat.GetMonthName(item.Period.Month))
                    </p>

                </h4>
            </div>

            <div class="panel-body">
                <div class="list-group">
                    @foreach (var member in item.Members)
                    {
                        var alertClass = member.Value > 0 ? "success" : (member.Value == 0 ? "info" : "danger");

                        <div class="alert alert-@alertClass" style="margin-bottom:0">
                            <h5>@member.Key.Name</h5>
                            <p class="text-@alertClass"><b>Balanço: R$ @member.Value.ToString("F2", CultureInfo.CurrentCulture)</b></p>
                        </div>
                    }
                </div>
            </div>
            <div class="panel-footer">
                @item.PaymentObservation
            </div>

        </div>
    </div>

}
