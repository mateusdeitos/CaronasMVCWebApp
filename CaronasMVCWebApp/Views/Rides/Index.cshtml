@model List<CaronasMVCWebApp.Models.Ride>

@{
    ViewData["Title"] = "Viagens cadastradas";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Nova Viagem</a>
</p>
<table class="table table-responsive table-striped" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model[0].DriverId)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model[0].DestinyId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destiny.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info glyphicon glyphicon-search"></a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default glyphicon glyphicon-pencil"></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger glyphicon glyphicon-trash"></a>
            </td>
        </tr>
        }
    </tbody>
</table>
